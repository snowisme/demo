<div class="container col-md-6">
   <table>
      <tr>
         <th>Class Name</th>
         <th>Class Quantity</th>
         <th>Menu</th>
      </tr>
      {{#each classList }}
      <tr>
         <td>{{ name }}</td>
         <td>{{ quantity }}</td>
         <td>
            <a href="/class/edit/{{ _id }}">Edit</a>
            <a class="btn" href="/class/delete/{{ _id }}"
            onclick="return confirm('Do you want to delete this class ?');"
            >Delete</a>
         </td>
      </tr>
      {{/each}}
   </table>
</div>