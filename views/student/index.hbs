<center>
   <a class="btn btn-primary mb-3" href="/student/add">Add new student</a>
   <a class="btn btn-success" href="/student/deleteall"
      onclick="return confirm('Are you sure to delete all students ?');">Delete all students</a>
</center>

<div class="row mt-3 mb-3">
   <div class="col-md-4">
      <form action="/student/search" method="post">
         <input class="form-control" type="search" name="keyword" id="" required placeholder="Search by name">
      </form>
   </div>
   <div class="col-md-4">
      <a class="btn btn-info" href="/student/sortid/asc">
         ID Ascending
      </a>
      <a class="btn btn-warning" href="/student/sortid/desc">
         ID Descending
      </a>
   </div>
   <div class="col-md-4">
      <a class="btn btn-danger" href="/student/male">
         Male
      </a>
      <a class="btn btn-primary" href="/student/female">
         Female
      </a>
   </div>
</div>
<table class="table table-info">
   <tr>
      <th>Student ID</th>
      <th>Full Name</th>
      <th>Gender</th>
      <th>Class</th>
      <th>Image</th>
      <th>Menu</th>
   </tr>
   {{#each studentList }}
   <tr>
      <td>{{ id }}</td>
      <td>{{ name }}</td>
      <td>{{ gender }}</td>
      <td>
         {{ class.name }}
      </td>
      <td>
         <a href="/student/detail/{{ _id }}">
            <img src="{{ image }}" width="100" height="100">
         </a>
      </td>
      <td>
         <a class="btn btn-warning" href="/student/edit/{{ _id }}">Edit</a>
         <a class="btn btn-danger" href="/student/delete/{{ _id }}"
            onclick="return confirm('Are you sure to delete this student ?');">Delete</a>
      </td>
   </tr>
   {{/each}}

</table>